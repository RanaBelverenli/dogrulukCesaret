<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Resmin nasıl ölçekleneceği ayarlandı -->

    <!-- Yuvarlak kenarlı arka plan burada -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        tools:layout_editor_absoluteX="-172dp"
        tools:layout_editor_absoluteY="0dp" /> <!-- arkadaki pembe renkli resmi eklemek için  -->

    <Button
        android:id="@+id/oyunaBasla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_oyuna_basla_background"
        android:text="      OYUNA BAŞLA      "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ayarlar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/ayarlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_ayarlar_background"
        android:text="           AYARLAR           "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.741" />
</androidx.constraintlayout.widget.ConstraintLayout>
