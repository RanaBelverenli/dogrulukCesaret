<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- arkadaki pembe renkli resmi eklemek için  -->

    <ImageView
        android:id="@+id/imageBackgorund"
        android:layout_width="411dp"
        android:layout_height="659dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img" />

    <ImageButton
        android:id="@+id/buttonBack3"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:background="@color/black"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ekle Butonu"
        android:scaleType="centerInside"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/kategoriadi"
        android:layout_width="308dp"
        android:layout_height="47dp"
        android:fontFamily="serif"
        android:text="    Kategori Adı"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="9dp" />

    <Button
        android:id="@+id/buttonCesaret"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:background="@drawable/button_ayarlar_background"
        android:text="           CESARET           "
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/buttonDogruluk"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:background="@drawable/button_oyuna_basla_background"
        android:text="      DOĞRULUK      "
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="305dp" />

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/homebutton" />

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageBackgorund"
        app:layout_constraintVertical_bias="0.998"
        app:srcCompat="@drawable/settings" />


</androidx.constraintlayout.widget.ConstraintLayout>