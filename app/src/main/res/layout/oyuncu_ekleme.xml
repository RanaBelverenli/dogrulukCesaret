<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/geritusu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000">

    <ImageView
        android:id="@+id/img.png"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Görüntü oranını koruyarak küçültür -->

    <EditText
        android:id="@+id/editTextOyuncu1"
        android:layout_width="332dp"
        android:layout_height="47dp"
        android:background="@android:color/white"
        android:hint="  Oyuncu 1"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/editTextOyuncu2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img.png"
        app:layout_constraintVertical_bias="0.957"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextOyuncuGir"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:background="@android:color/white"
        android:hint="  Oyuncu gir"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/editTextOyuncu1"
        app:layout_constraintEnd_toEndOf="@+id/img.png"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img.png"
        app:layout_constraintVertical_bias="0.87"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextOyuncu2"
        android:layout_width="332dp"
        android:layout_height="47dp"
        android:background="@android:color/white"
        android:hint="  Oyuncu 2"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img.png"
        app:layout_constraintVertical_bias="0.843"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/buttonBin2"
        android:layout_width="39dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ekle Butonu"
        android:scaleType="centerInside"
        android:src="@drawable/bin"
        app:layout_constraintBottom_toBottomOf="@+id/editTextOyuncu2"
        app:layout_constraintEnd_toEndOf="@+id/editTextOyuncu2"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="@+id/editTextOyuncu2"
        app:layout_constraintTop_toTopOf="@+id/editTextOyuncu2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:background="@color/black"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ekle Butonu"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/editTextOyuncuGir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Görüntü oranını koruyarak küçültür -->

    <ImageButton
        android:id="@+id/buttonPlus"
        android:layout_width="91dp"
        android:layout_height="46dp"
        android:background="@color/black"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ekle Butonu"
        android:scaleType="centerInside"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toTopOf="@+id/buttonBin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toEndOf="@+id/editTextOyuncuGir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862" />

    <ImageButton
        android:id="@+id/buttonBin"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:background="@color/black"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Ekle Butonu"
        android:scaleType="centerInside"
        android:src="@drawable/bin"
        app:layout_constraintBottom_toBottomOf="@+id/editTextOyuncu1"
        app:layout_constraintEnd_toEndOf="@+id/editTextOyuncu1"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="@+id/editTextOyuncu1"
        app:layout_constraintTop_toTopOf="@+id/editTextOyuncu1"
        app:layout_constraintVertical_bias="0.0" />  <!-- Görüntü oranını koruyarak küçültür -->


</androidx.constraintlayout.widget.ConstraintLayout>